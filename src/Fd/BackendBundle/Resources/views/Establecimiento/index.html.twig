{% extends 'BackendBundle::layout.html.twig' %}

{% block title %}
    {{ parent() }} - Lista de Establecimiento
{% endblock %}

{% block main_content %}

    <h1>Lista de establecimientos</h1>

    <div><a class="float_derecha boton_verde" href="{{ path('backend_establecimiento_new') }}">Crear nuevo establecimiento</a></div>
    <div class="limpiar_float"></div>

    <table class="grilla">
        <thead>
            <tr>
                <th>Id</th>
                <th>Cue</th>
                <th>Nombre</th>
                <th></th>
                <th>Email</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td>{{ entity.id }}</td>
                    <td>{{ entity.cue }}</td>
                    <td><a href="{{ path('backend_establecimiento_edit', { 'id': entity.id }) }}">{{ entity.nombre }}</a></td>
                    <td>{{ entity.apodo }}</td>
                    <td>{{ entity.email }}</td>
                    <td>
                        <a href="{{ path('backend_establecimiento_edit', { 'id': entity.id }) }}">
                            Editar
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <br />

    <div class="float_derecha boton_azul">
        <a href="{{ path('establecimiento_salida_planilla') }}">Salida a planilla de c√°lculo</a>
    </div>
    <br />
    <br />

{% endblock %}
