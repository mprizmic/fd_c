{% extends 'BackendBundle::layout.html.twig' %}

{% block main_content %}
    {{ parent() }}

    <div class="titulo">Autoridad de un establecimiento</div>

    <fieldset>
        <table class="record_properties">
            <tbody>
                <tr>
                    <th>Nombre: </th>
                    <td>{{ entity.nombre }}</td>
                </tr>
                <tr>
                    <th>Apellido: </th>
                    <td>{{ entity.apellido }}</td>
                </tr>
                <tr>
                    <th>TE: </th>
                    <td>{{ entity.teParticular }}</td>
                </tr>
                <tr>
                    <th>Email: </th>
                    <td>{{ entity.email }}</td>
                </tr>
            </tbody>
        </table>
    </fieldset>

    <br />

    <div>
        <form action="{{ path('backend.autoridad.delete', { 'id': entity.id }) }}" method="post">

            <a class="separador" href="{{ path('backend.autoridad.edit', { 'id': entity.id }) }}">Editar</a>

            <div class="invisible">
                {{ form_widget(delete_form) }}
            </div>

            <button type="submit" class="separador boton_rojo">Eliminar</button>

            <a class="separador" href="{{ path('backend.autoridad.buscar') }}">Volver a la lista</a>

        </form>
    </div>

    {% include '::includes/volver.html.twig' %}

{% endblock %}